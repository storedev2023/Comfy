            <option value="@RolesNames.Owner">@RolesNames.Owner</option>
            <option value="@RolesNames.SeniorManager">@RolesNames.SeniorManager</option>
            <option value="@RolesNames.Manager">@RolesNames.Manager</option>
            <option selected value="@RolesNames.Administrator">@RolesNames.Administrator</option>
        </select>
        <input type="text" name="UserName"  placeholder="Username" />
        <input type="password" name="Password" placeholder="Password" />
        <input type="password" name="ConfirmPassword" placeholder="Confirm password" />
        <input type="email" name="Email" placeholder="Email" />
        <input type="text" name="PhoneNumber" placeholder="PhoneNumber" />
        <button type="submit">Create</button>
    </form>
