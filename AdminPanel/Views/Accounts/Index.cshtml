<div class="text-center">
    <h1 class="display-4">Users</h1>
</div>

<div class="text-center">
    <div asp-validation-summary="All"></div>
    <table>
        <tr>
            <th>Position</th>
            <th>Username</th>
            <th>Email</th>
            <th>Phone number</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td><p>@user.Position</p></td>
                <form method="post" asp-controller="Accounts" asp-action="UpdateUser">
                    <input hidden name="Id" value="@user.Id" />
                    <td><input type="text" name="UserName" value="@user.UserName" /></td>
                    <td><input type="text" name="Email" value="@user.Email" /></td>
                    <td><input type="text" name="PhoneNumber" value="@user.PhoneNumber" /></td>
                    <td><button type="submit">Update</button></td>
                </form>
                <form method="post" asp-controller="Accounts" asp-action="DeleteUser">
                    <input hidden type="text" name="Id" value="@user.Id"/>
                    <td><button type="submit">Delete</button></td>
                </form>
            </tr>
        }
    </table>
</div>