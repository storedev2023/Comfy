@using WebApplication2.Models
@model Product
@{
    ViewData["Title"] = "Edit product";
}


<style>
    table {
        border: 1px solid black;
    }

    th {
        border: 1px solid grey;
    }

    td {
        border: 1px solid grey;
    }
</style>


<h1>Edit product</h1>

<form method="post" asp-action="EditProduct" asp-controller="Products">
    <input required hidden type="number" name="Id" value="@Model.Id" />

    <label for="Name">Name</label>
    <br />
    <input type="text" name="Name" placeholder="Name" value="@Model.Name" size="100" />
    <br /><br />

    <label for="Price">Price</label>
    <br />
    <input type="number" name="Price" placeholder="Price" value="@Model.Price" />
    <br /><br />

    <label for="Brand">Brand</label>
    <br />
    <input type="text" name="Brand" placeholder="Brand" value="@Model.Brand.Name" />
    <br /><br />

    <label for="Category">Category</label>
    <br />
    <input type="text" name="Category" placeholder="Category" value="@Model.Category.Name" />
    <br /><br />

    <label for="Model">Model</label>
    <br />
    <input type="text" name="Model" placeholder="Model" value="@Model.Model.Name" />
    <br /><br />

    <label for="Description">Description</label>
    <br />
    <input type="text" name="Description" placeholder="Description" value="@Model.Description" />
    <br /><br />

    <label for="DiscountAmount">Discount amount</label>
    <br />
    <input type="number" name="DiscountAmount" placeholder="Discount amount" value="@Model.DiscountAmmount" />
    <br /><br />

    <button type="submit">Save changes</button>
</form>

<br />


<label for="Url">Url</label>
<br />
<input disabled readonly type="text" name="Url" placeholder="Url" value="@Model.Url" size="100" />
<br />
<br />

<label for="Rating">Rating</label>
<br />
<input disabled readonly type="text" name="Rating" placeholder="Rating" value="@Model.Rating" />
<br />
<br />

<label for="Amount">Amount</label>
<br />
<input disabled readonly type="number" name="Amount" placeholder="Amount" value="@Model.Amount" />
<br />
<br />

<label for="Code">Code</label>
<br />
<input disabled readonly type="number" name="Code" placeholder="Code" value="@Model.Code" />
<br />
<br />


@if (Model.IsActive)
{
    <h6>Product is activated</h6>
    <a asp-action="ChangeProductActivityStatus" asp-controller="Products" asp-route-productId="@Model.Id" asp-route-isActive="@false">Deactivate it</a>
}
else
{
    <h6>Product is deactivated</h6>
    <a asp-action="ChangeProductActivityStatus" asp-controller="Products" asp-route-productId="@Model.Id" asp-route-isActive="@true">Activate it</a>
}
<br />
<br />

@if (Model.PriceHistory.Count > 0)
{
    <h3>Price history</h3>

    <table>
        <tr>
            <th>Date</th>
            <th>Price</th>
        </tr>
        @foreach (var price in Model.PriceHistory)
        {
            <tr>
                <td>@price.Date.ToString("dd.MM.yyyy")</td>
                <td>UAH: @price.Price</td>
            </tr>
        }
    </table>
}

<br />

<h3>Add characteristics</h3>
<form method="post" asp-action="AddCharacteristic" asp-controller="AdminPanel">
    <input hidden required name="ProductId" value="@Model.Id" />
    <input required name="Name" placeholder="Name" />
    <input required name="Value" placeholder="Value" />
    <button type="submit">Add</button>
</form>

@if (Model.Characteristics.Count > 0)
{
    <h3>Characteristics</h3>

    <table>
        <tr>
            <th>Name</th>
            <th>Value</th>
        </tr>
        @foreach (var x in Model.Characteristics)
        {
            <tr>
                <form method="post" asp-controller="AdminPanel" asp-action="EditCharacteristic">
                    <input required hidden name="ProductId" value="@Model.Id" />
                    <input required hidden name="Id" value="@x.Id" />
                <td><input required name="Name" value="@x.CharacteristicsName.Name" placeholder="Name" /></td>
                <td><input required name="Value" value="@x.CharacteristicsValue.Value" placeholder="Value" /></td>
                <td><button type="submit">Update</button></td>
                </form>
                <form method="post" asp-controller="AdminPanel" asp-action="DeleteCharacteristic">
                    <input required hidden name="ProductId" value="@Model.Id" />
                    <input required hidden name="Id" value="@x.Id" />
                <td><button type="submit">Delete</button></td>
                </form>
            </tr>
        }
    </table>
}
<br />

<h3>Upload image</h3>
<form method="post" asp-action="UploadImage" asp-controller="Images" enctype="multipart/form-data">
    <input hidden readonly type="number" name="productId" value="@Model.Id" />
    <div class="form-group">
        <label for="image">Select Image</label>
        <input accept="image/*" type="file" name="file" id="image" class="form-control-file" required>
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>

<br />

@if (Model.Images?.Count > 0)
{
    <h1>Images</h1>
    @foreach (var image in Model.Images)
    {
        <img src="@image.Url" width="300" height="200" />
        <a asp-action="DeleteImage" asp-controller="Images" asp-route-imageId="@image.Id" asp-route-productId="@Model.Id">Delete image</a>
        <br />
    }
}
